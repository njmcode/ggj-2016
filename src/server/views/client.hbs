<h1>CLIENT</h1>

<script src="/socket.io/socket.io.js"></script>
<script>
    var socket = io.connect();
    var game = "{{game}}";
    var id = Math.random();

    socket.on('connect', function(){
        socket.emit('join', {game: game});
    });

    socket.on('gesture', function(data) {
        console.log(data);
    });

    setInterval(function() {
        socket.emit('gesture', {
            id: id
        })
    }, 200);
</script>